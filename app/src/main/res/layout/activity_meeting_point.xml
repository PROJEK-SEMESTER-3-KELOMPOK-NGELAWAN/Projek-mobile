<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_bg"
    android:padding="16dp">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/cream_light"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trick supaya title center -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Spacer kiri (untuk kompensasi tombol back) -->
            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"/>

            <!-- Title -->
            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="12dp"
                android:text="Titik Kumpul"
                android:textColor="@color/brown_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Spacer kanan -->
            <View
                android:layout_width="60dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>


    <!-- CARD COUNTDOWN -->
    <LinearLayout
        android:id="@+id/card_meeting_countdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/bg_new_card"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/ic_location"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basecamp Cemoro Sewu"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/onBackground"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvLocationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jl. Raya Tawangmangu No.99, Karanganyar"
            android:textSize="14sp"
            android:textColor="@color/onBackground"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_inner_card"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvDepartLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keberangkatan dalam:"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/onBackground"/>

            <TextView
                android:id="@+id/tvCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menghitung..."
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/onBackground"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>


    <!-- CARD INFORMASI -->
    <LinearLayout
        android:id="@+id/card_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_cream"
        android:padding="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card_meeting_countdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Titik Kumpul"
            android:textColor="@color/brown_dark"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"/>


        <TextView
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="4dp"
            android:text="• Waktu kumpul: 05.00 WIB\n• Lokasi: Basecamp Cemoro Sewu\n• Parkir: Area basecamp\n• Bawa: KTP dan kebutuhan pribadi\n• Sarapan: Disediakan"
            android:textColor="@color/onBackground"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btnOpenMaps"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/brown_dark"
            android:text="Buka di Google Maps"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
