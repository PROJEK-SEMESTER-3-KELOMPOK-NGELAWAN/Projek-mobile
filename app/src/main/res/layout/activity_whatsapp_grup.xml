<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_bg"
    android:id="@+id/main_whatsapp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/black"
            app:title="Gabung WhatsApp Trip"
            app:titleCentered="true"
            app:titleTextColor="@color/black"
            android:elevation="0dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <View
        android:id="@+id/separator_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/toolbar_whatsapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/whatsapp_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/separator_whatsapp"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="60dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Akses Grup WhatsApp Trip"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Gunakan grup ini untuk informasi real-time dan koordinasi cepat selama trip."
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_gabung_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/brown_text"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Gabung Sekarang"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="15dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/whatsapp_logo_overlay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_whatsapp"
        app:layout_constraintBottom_toTopOf="@id/whatsapp_card"
        app:layout_constraintStart_toStartOf="@id/whatsapp_card"
        app:layout_constraintEnd_toEndOf="@id/whatsapp_card"
        app:layout_constraintTop_toTopOf="@id/whatsapp_card"
        android:elevation="6dp"
        android:background="@drawable/bg_icon_circle_white"
        android:padding="8dp"
        app:tint="@color/green" />

</androidx.constraintlayout.widget.ConstraintLayout>