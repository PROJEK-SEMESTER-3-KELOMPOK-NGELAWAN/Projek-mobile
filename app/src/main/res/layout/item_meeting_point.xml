<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="30dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="20dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_location"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Icon Location"
            card_view:tint="@color/tripRed" />

        <TextView
            android:id="@+id/tvLocationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lokasi"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/onBackground"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvLocationAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Lokasi"
            android:textSize="14sp"
            android:textColor="@color/onBackground"
            android:layout_marginTop="4dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvInfoTambahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi Tambahan"
            android:textSize="14sp"
            android:textColor="@color/onBackground"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menghitung..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/brown_dark"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnOpenMaps"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="Buka di Google Maps"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/brown_dark"
            android:layout_marginTop="16dp"
            app:cornerRadius="15dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>